-- documents 테이블의 collection_id 외래 키에 ON DELETE CASCADE 추가
ALTER TABLE documents
ADD CONSTRAINT documents_collection_id_fkey
FOREIGN KEY (collection_id) REFERENCES collections(id) ON DELETE CASCADE;

-- document_sections 테이블의 document_id 외래 키에 ON DELETE CASCADE 추가
ALTER TABLE document_sections
ADD CONSTRAINT document_sections_document_id_fkey
FOREIGN KEY (document_id) REFERENCES documents(id) ON DELETE CASCADE;
